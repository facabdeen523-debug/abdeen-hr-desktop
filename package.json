{
  "name": "abdeen-hr-desktop",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build:web": "vite build",
    "preview": "vite preview",
    "start:electron": "cross-env ELECTRON_START_URL=http://localhost:5173 electron .",
    "dev:electron": "concurrently \"npm:dev\" \"wait-on http://localhost:5173 && electron .\"",
    "typecheck": "tsc --noEmit",
    "build:win": "npm run build:web && electron-builder --win --x64"
  },
  "build": {
    "appId": "com.abdeen.hr",
    "productName": "مصنع عابدين - شئون الموظفين",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**",
      "electron/**",
      "node_modules/**",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    }
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "framer-motion": "^10.12.16",
    "better-sqlite3": "^8.3.0",
    "i18next": "^23.0.1",
    "react-i18next": "^13.0.0",
    "jsPDF": "^2.5.1"
  },
  "devDependencies": {
    "typescript": "^5.6.2",
    "vite": "^5.1.1",
    "tailwindcss": "^4.4.0",
    "postcss": "^8.4.36",
    "autoprefixer": "^10.4.14",
    "electron": "^26.0.0",
    "electron-builder": "^24.6.0",
    "concurrently": "^8.2.0",
    "wait-on": "^7.0.1",
    "cross-env": "^7.0.3",
    "@vitejs/plugin-react": "^4.0.0",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.8"
  }
}